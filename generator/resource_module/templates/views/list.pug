extends ../layout

block content
  h2 <%= schema.label_plural %>
  a(href="/<%= schema.identifier_plural %>/new") New

  ul.list-group
    for <%= schema.identifier %> in collection
      a.list-group-item(href="/<%= schema.identifier_plural %>/" + <%= schema.identifier %>.<%= "_id" %>)
        =<%= schema.identifier %>.<%= "_id" %>
        <%_ schema.attributes.forEach((a) => {_%>
        br
        =<%= schema.identifier %>.<%= a.identifier %>
        <%_ }) _%>

  pre= collection
